{
  "name": "davispeixoto/blog-core",
  "description": "A blog core application/model",
  "keywords": [
    "DDD",
    "blog",
    "cms",
    "sample"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Davis Peixoto",
      "email": "davis.peixoto@gmail.com"
    }
  ],
  "require": {
    "php": ">=7.0",
    "ramsey/uuid": "^3.0@dev",
    "myclabs/php-enum": "1.*",
    "psr/log": "^1.0@dev",
    "roave/security-advisories": "dev-master"
  },
  "require-dev": {
    "phpunit/phpunit": "~6.2"
  },
  "autoload": {
    "psr-4": {
      "DavisPeixoto\\BlogCore\\": "src/BlogCore"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "DavisPeixoto\\BlogCore\\Tests\\": "tests"
    }
  },
  "scripts": {
    "lint": "parallel-lint src tests",
    "phpunit": "phpunit --verbose --colors=always",
    "phpcs": "phpcs src tests --standard=psr2 -sp --colors",
    "test": [
      "@lint",
      "@phpunit",
      "@phpcs"
    ],
    "build-docs": "apigen generate --source='src' --destination='build/apidocs' --template-theme='bootstrap' --deprecated --todo"
  }
}
